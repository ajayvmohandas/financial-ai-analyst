# Azure OpenAI Configuration (Required)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4-chat

# Azure OpenAI Embeddings (Optional - if not using sentence-transformers)
AZURE_OPENAI_EMBEDDINGS_ENDPOINT=https://your-embeddings-resource.openai.azure.com/
AZURE_OPENAI_EMBEDDINGS_API_KEY=your-embeddings-api-key-here
AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT=text-embedding-ada-002

# LangSmith Configuration (Optional but recommended)
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=financial-ai-production
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# Storage Configuration
CHROMA_DB_PATH=./data/vector_db
DOCUMENT_STORAGE_PATH=./data/processed
RAW_DOCUMENT_PATH=./data/raw_documents

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Logging Configuration
LOG_LEVEL=INFO

# Application Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Azure Storage (Optional - for persistent storage in cloud)
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=documents

# Monitoring Configuration (Optional)
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key
